doctype html
html(ng-app="tweetstockr")
  head
    meta(charset="utf-8")
    title Tweetstockr - Beta
    base(href="/")

    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(name="description" content="What's the next trend?")
    meta(name="keywords" content="trend topics, twitter, tweetstockr")

    link(rel="shortcut icon" href="../images/favicon.ico")

    link(rel="stylesheet" href="/stylesheets/main.css")
    link(rel="stylesheet" href="/bower/chartist/dist/chartist.min.css")
    link(rel="stylesheet" href="/bower/angular-ui-notification/dist/angular-ui-notification.min.css")

    //- Social: Twitter
    meta(name="twitter:card" content="summary_large_image")
    meta(name="twitter:site" content="@tweetstockr")
    meta(name="twitter:creator" content="@tweetstockr")
    meta(name="twitter:title" content="Tweetstockr")
    meta(name="twitter:description" content="What's the next trend?")
    meta(property="twitter:image:src" content="http://www.tweetstockr.com/../images/social.png")
    
    //- Social: Facebook / Open Graph
    meta(property="og:url" content="http://www.tweetstockr.com")
    meta(property="og:type" content="website")
    meta(property="og:title" content="Tweetstockr")
    meta(property="og:image" content="http://www.tweetstockr.com/../images/social.png")
    meta(property="og:description" content="What's the next trend?")
    meta(property="og:site_name" content="Tweetstockr")

  body
    navbar
    
    .content(ng-view)

    script(type="text/javascript" src="/bower/angular/angular.js")
    script(type="text/javascript" src="/bower/angular-resource/angular-resource.js")
    script(type="text/javascript" src="/bower/angular-route/angular-route.js")
    script(type="text/javascript" src="/bower/angular-cookies/angular-cookies.js")
    script(type="text/javascript" src="/bower/socket.io-client/socket.io.js")
    script(type="text/javascript" src="/bower/chartist/dist/chartist.js")
    script(type="text/javascript" src="/bower/angular-chartist.js/dist/angular-chartist.js")
    script(type="text/javascript" src="/bower/angular-ui-notification/dist/angular-ui-notification.min.js")
    script(type="text/javascript" src="/scripts/main.js")
